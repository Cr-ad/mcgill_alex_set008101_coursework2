extends layout

block content
	.container
	nav.nav-bar
		a(href="/")
			h2 Blog Site
		.main-nav
			ul
				li.active_tab Home
				li Articles
					.mega-menu
						h3 Categories
						.inner-mega-menu
							a(href="/articles/Technology")
								p Technology
							a(href="/articles/Automotive")
								p Automotive
							a(href="/articles/Business")
								p Business
							a(href="/articles/Sports")
								p Sports
						.inner-mega-menu
							a(href="/articles/Travel")
								p Travel
							a(href="/articles/Economics")
								p Economics
							a(href="/articles/Politics")
								p Politics
							a(href="/articles/Science")
								p Science
						.inner-mega-menu
							a(href="/articles/Entertainment")
								p Entertainment
							a(href="/articles/Music")
								p Music 
							a(href="/articles/Gaming")
								p Gaming
							a(href="/articles/Other")
								p Other
				li Authors
				li About
				li
					.search-container
						form(name="search_bar", onsubmit="return search()", action='/search/', method="get")
							input(type="text" placeholder="Search.." name="search_input")
							button(type="submit")
								i(class="fa fa-search")             
		.right-nav
			ul
				li
					a(href="/users/register") Register
				li
					a(href="/users/login") Login

	br
	br
	- dateTime = selectedPost.date.toLocaleDateString() + " " + selectedPost.date.toLocaleTimeString();
	div.page
		div.blog-section
			div.blog-content
				p.blog-title !{selectedPost.title}
				img(class="blog-thumbnail" src=selectedPost.thumbnail)
				p.blog-text !{selectedPost.content}
				div.blog-footer
					p.blog-category Category: 
						a(href='/articles/'+selectedPost.category+'/') !{selectedPost.category}
					p.blog-info By <a href="#">!{selectedPost.author}</a> | !{dateTime}
		div.right-section

			p.right-header RELATED ARTICLES

			-for(i = posts.length - 1; i >= 0; i--){
				- category = posts[i].category
				- id = posts[i].id
				- thumbnail = posts[i].thumbnail
			div.right-content
				a(href='../'+category+'/'+id)
					img(class="right-thumbnail" src=thumbnail)
				a(href='../'+category+'/'+id) !{posts[i].title}
			-}