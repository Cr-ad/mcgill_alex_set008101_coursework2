extends layout

block content
	h1= title

	div.page
		div.blog-section
			div.blog-content
				p.blog-title <a href="#">!{posts[0].title}</a>
				<a href="#"><img class="blog-thumbnail" src=!{posts[0].thumbnail}></a>
				p.blog-text !{posts[0].content}
				div.blog-footer
					p.blog-category Category: <a href="#">!{posts[0].category}</a>
					p.blog-info By <a href="#">!{posts[0].author}</a> | !{posts[0].date}
		div.right-section

			p.right-header RELATED ARTICLES

			-for(i = posts.length - 1; i >= 0; i--){
			div.right-content
				<a href="/articles/test"><img class="right-thumbnail" src=!{posts[i].thumbnail}></a>
				<a href="/articles/test">!{posts[i].title}</a>
			-}