extends layout

block content
	.content
		h1 Register

		.alerts
			!= messages('message', locals)
			if errors
				each error, i in errors						
					div(class="alert alert-danger") #{error.msg}


		form(name="register", method="POST", action='/users/register')
			.form-container
				.form-heading
					p First Name:
				.form-content
					input(class="form-heading-input" type="text", name="first_name" size="25")
			.form-container
				.form-heading
					p Last Name:
				.form-content
					input(class="form-heading-input" type="text", name="last_name" size="25")
			.form-container
				.form-heading
					p Email:
				.form-content
					input(class="form-heading-input" type="text", name="email" size="25")
			.form-container
				.form-heading
					p Username:
				.form-content
					input(class="form-heading-input" type="text", name="username" size="25")
			.form-container
				.form-heading
					p Password:
				.form-content
					input(class="form-heading-input" type="password", name="password" size="25")
			.form-container
				.form-heading
					p Confirm Password:
				.form-content
					input(class="form-heading-input" type="password", name="password2" size="25")
			.form-container
				.form-heading
					p 
				.form-content
					.display-buttons
						.display-button
							input(class="blue" type="submit", value="Submit")
						.display-button
							input(class="red" onclick="homepage()" type="button" value="Cancel")