extends layout

block content
	h1= title

	div.page
		div.blog-section
			-for(i = 0; i < posts.length; i++){
				- category = posts[i].category
				- id = posts[i].id
				- thumbnail = posts[i].thumbnail
				- dateTime = posts[i].date.toLocaleDateString() + " " + posts[i].date.toLocaleTimeString();
				div.blog-content
					a(href='/articles/' + category+'/'+id)
						p(class="blog-title") !{posts[i].title}
						img(class="blog-thumbnail" src=thumbnail)
					p.blog-text !{posts[i].content}
					div.blog-footer
						p.blog-category Category: <a href="#">!{posts[i].category}</a>
						p.blog-info By <a href="#">!{posts[i].author}</a> | !{dateTime}
			-}
		div.right-section
			p.right-header POPULAR ARTICLES

			-for(i = posts.length - 1; i >= 0; i--){
				- category = posts[i].category
				- id = posts[i].id
				- thumbnail = posts[i].thumbnail
			div.right-content
				a(href='articles/'+category+'/'+id)
					img(class="right-thumbnail" src=thumbnail)
				a(href='articles/'+category+'/'+id) !{posts[i].title}
				//-<a href="/articles/{}"><img class="right-thumbnail" src=!{posts[i].thumbnail}></a>
				//-<a href="/articles/test">!{posts[i].title}</a>
			-}