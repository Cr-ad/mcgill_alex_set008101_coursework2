extends layout

block content
	.container
	nav.nav-bar
		a(href="#")
			h2 Blog Site
		ul
			li Home
			li.active_tab Articles
				.mega-menu
					h3 Categories
					.inner-mega-menu
						a(href="/articles/Technology")
							p Technology
						a(href="/articles/Automotive")
							p Automotive
						a(href="/articles/Business")
							p Business
						a(href="/articles/Sports")
							p Sports
					.inner-mega-menu
						a(href="#")
							p Category
						a(href="#")
							p Category
						a(href="#")
							p Category
						a(href="#")
							p Category
					.inner-mega-menu
						a(href="#")
							p Category
						a(href="#")
							p Category
						a(href="#")
							p Category
						a(href="#")
							p Category
			li Authors
			li About

		//- sort articles by date
	h1= title

	div.page
		div.blog-section
			-for(i = 0; i < posts.length; i++){
				- category = posts[i].category
				- id = posts[i].id
				- thumbnail = posts[i].thumbnail
				- dateTime = posts[i].date.toLocaleDateString() + " " + posts[i].date.toLocaleTimeString();
				div.blog-content
					a(href='/articles/' + category+'/'+id)
						p(class="blog-title") !{posts[i].title}
						img(class="blog-thumbnail" src=thumbnail)
					p.blog-text !{posts[i].content}
					div.blog-footer
						p.blog-category Category: <a href="#">!{posts[i].category}</a>
						p.blog-info By <a href="#">!{posts[i].author}</a> | !{dateTime}
			-}
		div.right-section
			p.right-header POPULAR ARTICLES

			-for(i = posts.length - 1; i >= 0; i--){
				- category = posts[i].category
				- id = posts[i].id
				- thumbnail = posts[i].thumbnail
			div.right-content
				a(href='articles/'+category+'/'+id)
					img(class="right-thumbnail" src=thumbnail)
				a(href='articles/'+category+'/'+id) !{posts[i].title}
			-}